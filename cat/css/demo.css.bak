/*define body style*/
*{
	margin:0;
	padding:0;
}
body{
	font-size:10px;
	background:#fff;
	color:#FFFEFE;
	font-family:'microsoft yahei','arial';
}
/*clear float left and right*/
.lt{float:left;}
.rt{float:right;}
.clear:before,.clear:after{
	content:'';
	display:table;
	clear:both;
}
/*video style*/
video{vertical-align:baseline;border:none;}
ul{list-style:none;}
a{text-decoration:none;}
/*header style*/
#head{
	padding:8px 20px;
}
#head div{
	position:relative;
	top:4px;
	cursor:pointer;
}
#head div>span{
	display:block;
	width:26px;
	height:3px;
	border-radius:3px;
	background:#000;
	margin:3px 0;
	border:1px solid #ddd;
}
/*menu dropdown*/
.drop_menu{
	text-align:center;
	font-size:3em;
	display:none;
}
.drop_menu li{
  background:#3C4F5D;
	border:1px solid #ddd;
	padding:.2em 0;
	border-radius:.2em;
	cursor:pointer;
	-webkit-transition:all linear 0.5s;
}
.drop_menu li:hover{
	transform:scale(1.05);
	color:#3C4F5D;
	background:#fff;
}
/*section one : slider fill the screen and have video*/
#slider{
	height:750px;
	position:relative;
	overflow:hidden;
}
#uImgs{
  width:400%;
	height:100%;
	position:absolute;
	top:0;
	left:0;
}
#uImgs li{
	height:100%;
	width:25%;
	float:left;
	text-align:center;
}
#uImgs li video{
	width:750px;
	height:500px;
	position:relative;
	top:115px;
}
#uImgs li:first-child{
	background:url("../imgs/img_3.png") no-repeat;
	background-size:cover;
}
#uImgs li:nth-child(2){
	background:url("../imgs/img_2.png") no-repeat;
	background-size:cover;
}
#uImgs li:nth-child(3){
	background:url("../imgs/img_1.png") no-repeat;
	background-size:cover;
}
#uImgs li:last-child{
	background:url("../imgs/img_3.png") no-repeat;
	background-size:cover;
}
#uIdx{
	position:absolute;
	bottom:2em;
	left:50%;
	margin-left:-34px;
}
#uIdx li{
  display:inline-block;
	background:#DEDCDE;
	width:10px;
	height:10px;
	border-radius:50%;
	margin:0 5px;
	cursor:pointer;
}
#uIdx li:hover,#uIdx li.active{
	background:#FA4900;
}
/*section two:introduce the title and the content*/
#intro{
	height:750px;
	background:url("../imgs/img_4.png") no-repeat;
	background-size:cover;
	text-align:center;
	position:relative;
}
#intro h1{
	font-size:4em;
	position:absolute;
	bottom:-50px;
	width:100%;
	opacity:0;
}
#intro p{
	font-size:1rem;
	line-height:3em;
	padding:0 25%;
	position:absolute;
	bottom:-50px;
	opacity:0;
}
/*section three : img and detialed information*/
#content{
	background:url("../imgs/img_5.png") no-repeat;
	background-size:cover;
	position:relative;
	padding:300px 0 100px;
}
#content h1{
	font-size:4em;
	text-align:center;
	width:300px;
	height:100px;
	position:absolute;
	top:3em;
	left:0;
	margin-left:-150px;
	opacity:0;
}
#content .list{
	display:flex;
	font-size:1.8em;
	justify-content:center;
	width:400px;
	position:absolute;
	top:230px;
	right:0;
	margin-right:-200px;
	opacity:0;
}
#content .list li{
	margin:0 25px;
	padding:3px 0;
	cursor:pointer;
}
#content .list li:hover,#content .list li.selected{
	border-bottom:2px solid #fff;
}
#list_content{
	display:flex;
	flex-wrap:wrap;
  justify-content:center;
	width:80%;
	margin:0 auto;
}
#list_content li{
	width:30%;
	box-sizing:border-box;
	padding:8px;
	background:#fff;
	margin:15px;
	color:#798187;
	border-radius:5px;
	opacity:0;
}
#list_content li img{
	width:100%;
	cursor:pointer;
}
#list_content li h4{
	font-size:1.6em;
	font-weight:900;
	color:#2F4064;
	margin:8px 0;
}
#list_content li p{
	font-size:1.2em;
	margin-bottom:16px;
}
#list_content li span{
	display:inline-block;
	padding:3px 5px;
	font-size:1.2em;
	color:#fff;
	background:#989898;
	border-radius:5px;
	margin-right:5px;
	cursor:pointer;
}
/*footer style*/
#footer{
	height:50px;
	line-height:50px;
	text-align:center;
	background:#000;
	color:#9B9B9B;
	padding-bottom:30px;
}